@model FIT5032_Assignment.Models.Appointment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Appointment Details</h2>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MachineID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MachineID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PatientName)
        </dd>

    </dl>
</div>


<div>
    @if (Session["Role"] != null)
    {
        if (Session["Role"].ToString() == "ADMIN")
        {
            @Html.ActionLink("Back to List", "AppointmentManagement")
        }
        else if (Session["Role"].ToString() == "STAFF")
        {
            @Html.ActionLink("Back to List", "AppointmentList")
        }
    }
</div>

